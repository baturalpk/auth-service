{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "typeRoots": ["src/@types"],
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": true
    }
}
