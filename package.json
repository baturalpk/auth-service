{
    "name": "@baturalpk/auth-service",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/baturalpk/auth-service.git"
    },
    "main": "index.js",
    "scripts": {
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "dev": "nodemon -r dotenv/config src/index.ts",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "generate": "prisma generate --schema=./src/prisma/schema.prisma",
        "migrate:init": "prisma migrate dev --name init --schema=./src/prisma/schema.prisma",
        "migrate": "prisma migrate dev --schema=./src/prisma/schema.prisma"
    },
    "type": "module",
    "dependencies": {
        "@prisma/client": "^3.15.2",
        "@types/bcrypt": "^5.0.0",
        "@types/morgan": "^1.9.3",
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.6",
        "dayjs": "^1.11.3",
        "express": "^4.18.1",
        "helmet": "^5.1.0",
        "morgan": "^1.10.0",
        "prisma": "^3.15.2",
        "redis": "^4.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/node": "^18.0.0",
        "@types/uuid": "^8.3.4",
        "dotenv": "^16.0.1",
        "nodemon": "^2.0.16",
        "prettier": "^2.7.1",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4"
    }
}
